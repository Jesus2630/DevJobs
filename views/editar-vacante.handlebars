<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" method="post" class="default-form">
         <h3>Informaci贸n General</h3>

         <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo" placeholder="Nombre del puesto" value="{{vacante.titulo}}" required>
         </div>
         <div class="campo">
            <label>Empresa</label>
            <input type="text" name="empresa" placeholder="Nombre de la empresa" value="{{vacante.empresa}}" required>
         </div>
         <div class="campo">
            <label>Ubicaci贸n</label>
            <input type="text" name="ubicacion" placeholder="Zona de trabajo" value="{{vacante.ubicacion}}" required>
         </div>
        <div class="campo">
            <label>Sueldo</label>
            <input type="text" name="sueldo" placeholder="Sueldo aproximado"  value="{{vacante.sueldo}}" required>
        </div>
        <div class="campo">
            <label>Contrato</label>
            <select name="contrato">
                {{#tipoContrato vacante.contrato}}
                    <option value="" disabled selected>Seleccionar</option>
                    <option value="Tiempo Completo">Tiempo Completo</option>
                    <option value="Medio Tiempo">Medio Tiempo</option>
                    <option value="Trabajo Remoto">Trabajo Remoto</option>
                    <option value="Trabajo Freelance">Trabajo Freelance</option>
                {{/tipoContrato}}
            </select>
        </div>
        <h3>Descripci贸n del trabajo</h3>
        <div class="campo descripcion">
            <label>Descripci贸n</label>
            <input type="hidden" id="x" name="descripcion"  value="{{{vacante.descripcion}}}" >
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>

        <ul class="lista-conocimientos">
            {{#seleccionarHabilidades vacante.skills}}
            {{/seleccionarHabilidades}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>
    </form>
</main>