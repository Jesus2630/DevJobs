<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{nombrePagina}}</title>
    {{!-- Fonts --}}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,400;0,600;0,700;1,800&display=swap" rel="stylesheet">
    {{!-- Style --}}
    <link rel="stylesheet" href="/css/app.css">
    {{!-- Trix --}}
    <link rel="stylesheet" href="/css/trix.css">
</head>

<body>

    <div class="nombre-sitio contenedor">
        <h1>
            <a href="/">EnJobs</a>
        </h1>

        {{#if barra}}
            <div class="buscador">
                <form action="#">
                    <input type="text" class="buscar">
                    <input type="submit" value="Buscar">
                </form>
            </div>
        {{/if}}

        {{#if cerrarSesion}}
            <div class="cerrar-sesion">
                <a href="/administracion">Administracion</a>
                <a href="/cerrar-sesion">Cerrar Sesi√≥n</a> 
                <p>{{nombre}}</p>
                {{#if imagen}}
                    <img src="/uploads/perfiles/{{imagen}}" class="admin-perfil">
                {{/if}}
            </div>
        {{/if}}

    </div>

    <header class="site-header contenedor separador">
          <h2>{{nombrePagina}}</h2> 

           {{#if tagLine}}
                <p class="tagline">{{tagLine}}</p>
           {{/if}}      

           {{#if boton}}
                <a href="/vacantes/nueva" class="btn btn-azul">Publicar Nueva Vacante</a>
           {{/if}}
    </header>


    <div class="contenido-principal contenedor">
        {{#if mensajes}}
            <div class="alertas">
                {{#mostrarAlertas mensajes}}
                {{/mostrarAlertas}}
            </div>
        {{/if}}
        {{{body}}}

    </div>

    
    <script src="/js/trix.js"></script>
    <script src="/dist/bundle.js"></script>
</body>

</html>